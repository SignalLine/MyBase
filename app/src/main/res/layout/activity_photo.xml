<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".my.PhotoActivity">

    <TextView
        android:id="@+id/pick_tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="选择地址"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/pick_tv_address2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="选择地址2"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/pick_tv_time"
        android:text="选择时间"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pick_tv_age"
        android:text="选择年龄"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pick_tv_sex"
        android:text="选择性别"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.rilin.lzy.mybase.widgets.ImageCircleView
        android:id="@+id/pick_icv_photo"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:text="更改下面imageView头像"
        android:id="@+id/pick_btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/pick_iv_head"
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

</LinearLayout>
